<Application
    x:Class="LinuxCommandsCollection.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LinuxCommandsCollection">

    <Application.Resources>
        <SolidColorBrush x:Key="MyBackgroundColor" Color="#181818" />
        <SolidColorBrush x:Key="MyDark" Color="#0c0c0c" />
        <SolidColorBrush x:Key="MyWhite" Color="#ecf0f1" />
        <SolidColorBrush x:Key="MyGray" Color="#363435" />
		 <SolidColorBrush x:Key="MyGreen" Color="#6D8764" />

		<Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="42" />
            <Setter Property="CharacterSpacing" Value="80" />
			<Setter Property="Margin" Value="4,0,4,0" />
		</Style>
	</Application.Resources>
</Application>
